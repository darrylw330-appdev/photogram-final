<div>
  <div>
  <h1>
      Photo Details
    </h1>


      <div>
        
      </div>
    </div>
   <dt>
        Image
      </dt>
      <dd>
        <img src="<%= @the_photo.image %>">
      </dd>
    <dl>
      <dt>
        Caption
      </dt>
      <dd>
        <%= @the_photo.caption %>
      </dd>

      <dt>
        Comments count
      </dt>
      <dd>
        <%= @the_photo.comments_count %>
      </dd>

      <dt>
        Likes count
      </dt>
      <dd>
        <%= @the_photo.likes_count %>
      </dd>

      <dt>
        Owner
      </dt>
      <dd>
        <%= @the_photo.owner.username %>
      </dd>

      <dt>
        Posted at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.created_at) %> ago
      </dd>

        <dt>Fans</dt>
      <dd>
      <% @the_photo.likes.each do |like| %>
            <%= like.user.username %>
      <% end %>
     </dd>

  <dt>Add a fan</dt>
        <dd>
          <% if  @user_like_checker  != nil %>
            <a href="/delete_like/<%= @user_like_checker.id %>">
              Unlike
            </a>
          <% else %>
   <dd>

    <form action="/insert_like" method="post">
      <input type="hidden" id="fan_id_box" name="query_fan_id" value="<%= @current_user.id %>">
      <input type="hidden" id="photo_id_box" name="query_photo_id" value="<%= @the_photo.id %>">
      <button>Like</button>
    </form>
      </dd>
          <%end%>
  

    </dl>
  </div>
</div>
 
  <% if @current_user.id == @the_photo.owner_id %>
          <dt>
            Edit photo
          </dt>
          <dd>
            <form action="/modify_photo/<%=@the_photo.id %>"  method="post" enctype="multipart/form-data">
              <label for="image_box">
                Image
              </label>

              <input type="file" id="image_box" name="query_image" placeholder="Enter a URL for the image...">

              <label for="browser_caption">
                Caption
              </label>

              <textarea id="browser_caption" name="query_caption"><%= @the_photo.caption %></textarea>
              <button>
                Update photo
              </button>
            </form>
          </dd>

          <dt>
            Delete photo
          </dt>
          <dd>
            <a href="/delete_photo/<%= @the_photo.id %>">
              Delete this photo
            </a>
          </dd>

        </dl>

      <% end %>

    </div>
  </div>

<h2>Comments</h2>

 <table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>
    
    <%@the_photo.comments.each do |comment|%>
    <tr>
      <td>
        <%=comment.commenter.username%>
      </td>
       
      <td>
        <%=comment.body%>
      </td>
       
      <td>
       <%=time_ago_in_words(comment.created_at)%>
      </td>
    </tr>  
 <%end%>
 </table>

<h3>Add a new comment</h3>

<form action="/insert_comment" method="post">
  <input type="hidden" value="<%=@the_photo.id%>" name="query_photo_id">
  <input type="hidden" id="author_id" name="query_author_id" value="<%=@current_user.id%>">
  
 
  <textarea id="browser_comment" name="query_body" placeholder="Enter a comment..."></textarea>
 <label for="browser_comment">Comment</label>

  <button>Add comment</button>
</form>
