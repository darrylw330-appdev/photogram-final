<h1><%= @the_user.username %></h1>

<dl>
  <dt>Private</dt>
  <dd><%= @the_user.private? %></dd>

  <dt>Followers</dt>
  <dd>
    <%= @the_user.followers.count %>
  </dd>

  <dt>Following</dt>
  <dd>
    <%= @the_user.following.count %>
  </dd>
</dl>

<h1>Liked photos (<%= @the_user.liked_photos.count %>)</h1>
<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
      Likes
    </th>

    <th></th>
  </tr>

  <tr>
    <% @the_user.liked_photos.each do |like| %>
    <td>
      <img src="<%= like.image %>">
    </td>

    <td>
      <%= like.username %>
    </td>
      <%= like.caption %>
    <td>
      
    </td>

    <td>
      <%= like.created_at %>
    </td>

    <td>
      <%= like.likes_count %>
    </td>

    <td>
      <a href="/photos/<%= like.id %>">
        Show details
      </a>
    </td>
  <% end %>
  </tr>
